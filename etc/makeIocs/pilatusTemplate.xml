<?xml version="1.0" ?>
<components arch="linux-x86">
	<EPICS_BASE.EpicsEnvSet key="EPICS_CA_MAX_ARRAY_BYTES" name="EPICS_CA_MAX_ARRAY_BYTES" value="10000000"/>
	<ADPilatus.pilatus BUFFERS="$(BUFFERS=100)" CAMSERVER="$(HOST):41234"  TIMEOUT="1" XSIZE="$(XSIZE)" YSIZE="$(YSIZE)" PORT="$(PREFIX).CAM"/>
	<ADCore.NDAttributes attrname="AcqPeriod" datatype="DOUBLE" description="Acquisition period between images" port="$(PORTNAME).CAM" source="ACQ_PERIOD" type="PARAM"/>
	<ADCore.NDAttributes attrname="NumExposures" description="Number of exposures per image" port="$(PORTNAME).CAM" source="NEXPOSURES" type="PARAM"/>
	<ADCore.NDAttributes attrname="NumImages" description="Number of images" port="$(PORTNAME).CAM" source="NIMAGES" type="PARAM"/>
	<ADCore.NDAttributes attrname="ImageMode" description="Image mode" port="$(PORTNAME).CAM" source="IMAGE_MODE" type="PARAM"/>
	<ADCore.NDAttributes attrname="TriggerMode" description="Trigger mode" port="$(PORTNAME).CAM" source="TRIGGER_MODE" type="PARAM"/>
	<ADCore.NDAttributes attrname="ImageCounter" description="Image counter" port="$(PORTNAME).CAM" source="ARRAY_COUNTER" type="PARAM"/>
	<ADCore.NDAttributes attrname="MaxSizeX" description="Detector X size" port="$(PORTNAME).CAM" source="MAX_SIZE_X" type="PARAM"/>
	<ADCore.NDAttributes attrname="MaxSizeY" description="Detector Y size" port="$(PORTNAME).CAM" source="MAX_SIZE_Y" type="PARAM"/>
	<ADCore.NDAttributes attrname="CameraModel" datatype="STRING" description="Camera model" port="$(PORTNAME).CAM" source="MODEL" type="PARAM"/>
	<ADCore.NDAttributes attrname="CameraManufacturer" datatype="STRING" description="Camera manufacturer" port="$(PORTNAME).CAM" source="MANUFACTURER" type="PARAM"/>
	<autosave.Autosave iocName="$(IOCNAME)" name="$(name=)AS" path="$(AUTOSAVEPATH)"/>
	<autosave.auto_save_restoreStatus P="$(IOCNAME)"/>
	<devIocStats.ioc IOCNAME="$(IOCNAME)" name="$(name=)"/>
	<ADCore.NDStdArrays ADDR="0" FTVL="LONG" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" NELEMENTS="$(NELEMENTS)" P="$(PREFIX)" PORT="$(PORTNAME).ARR1" R=":image1:" TIMEOUT="1" TYPE="Int32"/>
	<ADCore.NDROI ADDR="0" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" P="$(PREFIX)" PORT="$(PORTNAME).ROI1" R=":ROI1:" TIMEOUT="1"/>
	<ADCore.NDProcess ADDR="0" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" P="$(PREFIX)" PORT="$(PORTNAME).PROC1" R=":Proc1:" TIMEOUT="1"/>
	<ADCore.NDStats ADDR="0" HIST_SIZE="256" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" P="$(PREFIX)" PORT="$(PORTNAME).STATS1" R=":Stats1:" TIMEOUT="1" XSIZE="$(XSIZE)" YSIZE="$(YSIZE)"/>
	<ADCore.NDStats ADDR="0" BLOCK="0" Enabled="0" HIST_SIZE="256" NCHAN="10000" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).ROI1" P="$(PREFIX)" PORT="$(PORTNAME).STATS2" QUEUE="16" R=":Stats2:" TIMEOUT="1" XSIZE="$(XSIZE)" YSIZE="$(YSIZE)"/>
	<ADCore.NDFileHDF5 ADDR="0" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" P="$(PREFIX)" PORT="$(PORTNAME).HDF5" QUEUE="$(HDFBUFFERS=100)" R=":HDF5:" TIMEOUT="1"/>
	<ffmpegServer.ffmpegStream ADDR="0" HTTP_PORT="$(HTTP_PORT=8080)" NDARRAY_ADDR="0" NDARRAY_PORT="$(PORTNAME).CAM" P="$(PREFIX)" PORT="$(PORTNAME).MJPG1" QUALITY="100" R=":MJPG1:" TIMEOUT="1"/>
	<EPICS_BASE.StartupCommand command="dbpf &quot;$(PREFIX):cam1:CamserverAsyn.AUCT&quot;, 0" post_init="True"/>
</components>
